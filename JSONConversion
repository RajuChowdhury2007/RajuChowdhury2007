    # reading JSON:
    #with open(r'C:\Users\rbc20092\Downloads\Test.json', errors='ignore') as f:
    with open(filepath, errors='ignore') as f: 
        for line in f:
            data_dict = json.loads(line)
            df_length = len(df)
            df.loc[df_length] = data_dict
            df['Key'].loc[df_length] = line


